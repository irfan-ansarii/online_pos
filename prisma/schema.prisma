model Shipment {
  id            Int       @id @default(autoincrement())
  orderId       Int
  kind          String // forward | return
  carrier       String?
  awb           String?
  trackingUrl   String?
  labelUrl      String?
  subtotal      Float     @default(0)
  totalDiscount Float     @default(0)
  charges       Float     @default(0)
  total         Float     @default(0)
  status        String // shipment status
  deliveryAt    DateTime?
  cancelledAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  order             Sale               @relation(fields: [orderId], references: [id], onDelete: Cascade)
  shipmentEvents    ShipmentEvent[]
  shipmentLineItems ShipmentLineItem[]

  @@map("shipments")
}

model ShipmentLineItem {
  id            Int   @id @default(autoincrement())
  shipmentId    Int
  lineItemId    Int
  productId     Int?
  variantId     Int?
  price         Float
  quantity      Int
  totalDiscount Float
  totalTax      Float
  total         Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shipment  Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  lineItem  LineItem @relation(fields: [lineItemId], references: [id], onDelete: Cascade)

  @@map("shipment_line_items")
}

model ShipmentEvent {
  id         Int      @id @default(autoincrement())
  shipmentId Int
  status     String // shipment status
  location   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  shipment Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)

  @@map("shipment_events")
}

